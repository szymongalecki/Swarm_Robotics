<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
</declaration>
	<template>
		<name x="5" y="5">robot</name>
		<parameter>int [0,5] steps, int[-1, 1] direction, int threshold</parameter>
		<declaration>// Place local declarations here.</declaration>
		<location id="id0" x="-119" y="0">
			<name x="-220" y="-16">connected</name>
		</location>
		<location id="id1" x="297" y="0">
			<name x="263" y="34">forward</name>
		</location>
		<location id="id2" x="756" y="0">
			<name x="781" y="-16">disconnected</name>
		</location>
		<location id="id3" x="756" y="247">
			<name x="782" y="229">turn_180</name>
		</location>
		<location id="id4" x="-119" y="238">
			<name x="-237" y="221">turn_random</name>
		</location>
		<init ref="id0"/>
		<transition id="id5">
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="guard" x="501" y="-161">steps &gt; 0</label>
			<label kind="assignment" x="501" y="-136">steps += 1</label>
			<nail x="654" y="-102"/>
			<nail x="433" y="-102"/>
		</transition>
		<transition id="id6">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="76" y="-161">steps &gt; 0</label>
			<label kind="assignment" x="76" y="-136">steps += 1</label>
			<nail x="-8" y="-102"/>
			<nail x="204" y="-102"/>
		</transition>
		<transition id="id7">
			<source ref="id3"/>
			<target ref="id1"/>
			<label kind="assignment" x="450" y="136">steps += 1</label>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="765" y="110">steps == 0</label>
			<label kind="assignment" x="765" y="136">direction *= -1</label>
		</transition>
		<transition id="id9">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="399" y="-76">(steps * direction &gt; -threshold) &amp;&amp;
(steps * direction &lt; threshold) 
== false</label>
		</transition>
		<transition id="id10">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="-42" y="-85">(steps * direction &gt; -threshold) &amp;&amp; 
(steps * direction &lt; threshold) 
== true</label>
		</transition>
		<transition id="id11">
			<source ref="id4"/>
			<target ref="id1"/>
			<label kind="assignment" x="102" y="127">steps += 1</label>
		</transition>
		<transition id="id12">
			<source ref="id0"/>
			<target ref="id4"/>
			<label kind="guard" x="-204" y="102">steps == 0</label>
			<label kind="assignment" x="-204" y="127">direction := 1</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
r1 = robot(2, 0, 3);
// List one or more processes to be composed into a system.
system r1;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
