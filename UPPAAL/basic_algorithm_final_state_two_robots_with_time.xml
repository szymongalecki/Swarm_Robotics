	<declaration>// Place global declarations here.
clock t;
chan move;
int X[2];
int Y[2];

int x_direction(int direction){
    if (direction == 1){
        return 1;
    }
    if (direction == 3){
        return -1;
    }
    return 0;
}

int y_direction(int direction){
    if (direction == 0){
        return 1;
    }
    if (direction == 2){
        return -1;
    }
    return 0;
}

int reverse(int direction){
    if (direction != 0){
        return direction * -1;
    }
    return 0;
}

bool connected(int t){
    int x = abs(X[0] - X[1]);
    int y = abs(Y[0] - Y[1]);
    return x*x + y*y &lt;= t*t;
}</declaration>
